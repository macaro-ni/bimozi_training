<div class="container">
  <div class="row">
        <h1>文字ジャンル一覧</h1>

        <div class= "col-md-12">

          <ul class="list-unstyled">
          <% @genres.each do |genre| %>
            <li><%= link_to genre.name, sample_path(genre.id) %></li>
          <% end %>
          </ul>

        <h5>入力した文字を練習する</h5>
          <%= form_with model: @letter do |f| %>
            <%= f.text_field :name %>
            <%= f.hidden_field :genre_id, :value => "8" %>
            <%= f.submit '実行' %>
          <% end %>
