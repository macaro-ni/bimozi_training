<div class="container">
  <div class="row">
        <h1>文字ジャンル一覧</h1>

        <div class= "col-md-12">

          <ul class="list-unstyled">
          <% @genres.each do |genre| %>
            <li><%= link_to genre.name, sample_path(genre.id) %></li>
          <% end %>
          </ul>
        </div>

        <div class="form-label">
        <h5>入力した文字を練習する</h5>
          <p>長い文字の場合、15文字ごとに改行してください。</p>
          <%= form_with model: @letter ,url:samples_path do |f| %>
            <%= f.text_area :name, class: "form-control text-area", style: "width:280px" %>
            <%= f.hidden_field :genre_id, :value => "8" %>
            <%= f.submit '実行' %>
          <% end %>
        </div>

    </div>
</div>