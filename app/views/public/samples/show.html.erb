<h1>文字ジャンル詳細</h1>

<h5><%= @genre.name %></h5>
<%= @letters.each do |letter| %>
   <li><%= link_to new_sample_practice_path(letter.id) do %>
           <%= letter.name %>
           <!--お気に入り機能-->
           <% if current_user.favorite_find(letter.id) %>
              <%= link_to 'お気に入りからはずす', destroy_favorite_path(letter.id), method: :delete %>
            <% else %>
              <%= link_to 'お気に入り登録する', create_favorite_path(letter.id), method: :post %>
            <% end %>
       <% end %></li>
<% end %>