<h1>会員情報編集</h1>

<% if @user.email == 'guest@example.com'%>
      <p>ゲストユーザーはユーザー情報の編集ができません。</p>
<% else %>

    <%= form_with model: @user ,url: users_information_path ,method: :patch do |f| %>


     <table class="table table-borderless">
        <tr>
          <td>メールアドレス</td>
          <td><%= f.text_field :email, autofocus: true %></td>
        </tr>
        <tr>
          <td>氏名</td>
          <td><%= f.text_field :last_name %></td>
        </tr>
        <tr>
          <td>カナ</td>
          <td><%= f.text_field :first_name_kana %></td>
        </tr>
        <tr>
          <td>住所</td>
          <td><%= f.text_field :address %></td>
        </tr>
      </table>

    <%= f.submit '編集内容を保存', class: "btn btn-sm" %>
      <%= link_to "退会する" , users_unsubscribe_path, method: :get, class: "btn btn-sm" %>
    <% end %>

<% end %>





